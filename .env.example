# Application
NUXT_APP_NAME="XyraPanel"
NUXT_APP_BASE_URL="/"
NODE_ENV="development"

# Authentication
# Generate with: openssl rand -base64 32
NUXT_AUTH_SECRET="CHANGE_THIS_TO_A_RANDOM_STRING_MINIMUM_32_CHARACTERS"
AUTH_ORIGIN="http://localhost:3000"

# Database
DRIZZLE_DATABASE_URL="file:./data/XyraPanel.sqlite"

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"
# REDIS_USERNAME=""
# REDIS_PASSWORD=""
# REDIS_TLS="false"

# Security
NUXT_SECURITY_CORS_ORIGIN="https://panel.example.com"
NUXT_SECURITY_CONNECT_SRC=""

# Request Limits (MB)
NUXT_MAX_REQUEST_SIZE_MB="4"
NUXT_MAX_UPLOAD_SIZE_MB="20"

# SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@xyrapanel.com"
