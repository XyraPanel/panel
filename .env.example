# XyraPanel Settings
APP_NAME="XyraPanel"

# Environment settings
NODE_ENV="development"
DEBUG=false

# Database
# Set DB_DIALECT=sqlite for local dev or postgresql in production
DB_DIALECT="sqlite"
DRIZZLE_DATABASE_URL="file:./data/XyraPanel.sqlite"

# Auth Origin - Set to your panel URL in production
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000
NUXT_PUBLIC_APP_URL=http://localhost:3000

# Generate a strong secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"
# REDIS_USERNAME=""
# REDIS_PASSWORD=""
# REDIS_TLS="false"

# Security
NUXT_SECURITY_CORS_ORIGIN=""
NUXT_SECURITY_CONNECT_SRC=""

# Captcha Provider (turnstile, recaptcha, or hcaptcha)
CAPTCHA_PROVIDER="turnstile"

# Cloudflare Turnstile
NUXT_TURNSTILE_SECRET_KEY=""
NUXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA # Test Mode Key

# Google reCAPTCHA v3
# NUXT_RECAPTCHA_SECRET_KEY=""
# NUXT_RECAPTCHA_MIN_SCORE="0.5"

# hCaptcha
# NUXT_HCAPTCHA_SECRET_KEY=""
# NUXT_HCAPTCHA_SITE_KEY=""

# Request Limits (MB)
NUXT_MAX_REQUEST_SIZE_MB="10"
NUXT_MAX_UPLOAD_SIZE_MB="20"